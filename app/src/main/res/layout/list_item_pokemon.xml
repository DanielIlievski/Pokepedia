<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPokemon"
        style="@style/CardView.Radius.Elevated.Clickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padding_xsmall"
        android:backgroundTint="@color/grey_light"
        app:cardPreventCornerOverlap="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPokemon"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginVertical="@dimen/margin_padding_tiny"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_pikachu_confused" />

            <TextView
                android:id="@+id/textPokemonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_light_translucent"
                android:gravity="center"
                android:textSize="@dimen/text_size_xmedium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgPokemon"
                tools:text="Pikachu" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupPokemonTypes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_light_translucent"
                android:paddingHorizontal="@dimen/margin_padding_xxmedium"
                android:paddingVertical="@dimen/margin_padding_tiny"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textPokemonName" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>