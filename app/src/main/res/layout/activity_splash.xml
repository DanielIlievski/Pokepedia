<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charcoal"
    tools:context=".ui.splash.SplashActivity">

    <ImageView
        android:contentDescription="@string/app_logo"
        android:id="@+id/imgSplashAnim"
        android:layout_width="@dimen/anim_splash_width"
        android:layout_height="@dimen/anim_splash_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:contentDescription="@string/pokepedia"
        android:layout_width="@dimen/img_splash_width"
        android:layout_height="@dimen/img_splash_height"
        android:src="@drawable/branding_image_pokepedia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>