<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokepedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_pokemon</item>
        <item name="colorPrimaryVariant">@color/blue_pokemon_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_pokemon</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <!-- region bottom navigation view style -->
    <style name="BottomNavigationView.Custom" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        
    </style>
    <!-- -->

    <!-- region button styles -->
    <style name="MaterialButton.Normal.Caps" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MaterialButton.Normal.Caps.Bold" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialButton.Normal.Caps.Radius" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="cornerRadius">@dimen/radius_large</item>
    </style>

    <style name="MaterialButton.Normal.NoCaps" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialButton.Normal.NoCaps.Bold" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialButton.SmallText.Radius.Clickable.NoCaps.Bold" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="cornerRadius">@dimen/radius_large</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialButton.NormalText.Radius.Clickable.NoCaps.Bold" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="cornerRadius">@dimen/radius_large</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialButton.TinyText.NoCaps.OneLine.Radius.NotClickable" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="maxLines">1</item>
        <item name="autoSizeMaxTextSize">@dimen/text_size_normal</item>
        <item name="autoSizeMinTextSize">@dimen/text_size_tiny</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="cornerRadius">@dimen/radius_xlarge</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="MaterialButton.PokemonType" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_weight">1</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/radius_xlarge</item>
        <item name="iconSize">@dimen/size_xxlarge</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTintMode">multiply</item>
    </style>

    <style name="MaterialButton.Logout" parent="Widget.MaterialComponents.Button">
        <item name="android:text">@string/logout</item>
        <item name="android:textColor">@color/red_error</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/radius_xlarge</item>
        <item name="rippleColor">@color/red_error_light</item>
        <item name="strokeColor">@color/red_error</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <!-- endregion -->

    <!-- region textview styles -->
    <style name="MaterialTextView.XLarge" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MaterialTextView.XLarge.Grey.Caps" parent="android:TextAppearance">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MaterialTextView.XLarge.Grey.Caps.Bold" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MaterialTextView.Normal.Grey.Center" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MaterialTextView.Normal.Grey.Center.Bold" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Normal.Clickable" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="TextView.Normal.Clickable.Bold" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Normal.Grey.Clickable" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="TextView.Small.Blue.Clickable" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/blue_pokemon</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="TextView.Small.Grey.Clickable" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="MaterialTextView.Xmedium.Center.Bold" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_xmedium</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Medium.Grey" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextView.Medium.CenterVertical.Clickable" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/margin_padding_xtiny</item>
    </style>
    <!-- endregion -->

    <!-- region textInputLayout styles -->
    <style name="TextInputLayout.OutlinedBox.Custom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/yellow_pokemon</item>
        <item name="boxStrokeErrorColor">@color/red_error</item>
        <item name="endIconTint">@color/blue_pokemon</item>
        <item name="errorTextColor">@color/red_error</item>
        <item name="hintTextColor">@color/blue_pokemon</item>
    </style>
    <!-- endregion -->

    <!-- region checkbox styles -->
    <style name="CheckBox.SmallText.Blue.Custom" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="buttonTint">@color/blue_pokemon</item>
    </style>
    <!-- endregion -->

    <!-- region cardView styles -->
    <style name="CardView.Radius.Elevated.Clickable" parent="CardView">
        <item name="cardCornerRadius">@dimen/radius_medium</item>
        <item name="cardElevation">@dimen/elevation_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
    <!-- endregion -->

    <!-- region AlertDialog -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_shape</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/TextView.Small.Blue.Clickable</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/TextView.Small.Blue.Clickable</item>
    </style>
    <!-- endregion -->

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="MyTeam.ShapeableImageView" parent="">
        <item name="android:background">@color/grey_light</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CornerSize10Percent</item>
        <item name="android:src">@drawable/ic_add_pokemon</item>
    </style>

    <style name="MyTeam.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_marginTop">@dimen/margin_padding_tiny</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_tiny</item>
        <item name="android:layout_gravity">top|end</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:src">@drawable/ic_delete</item>
        <item name="android:contentDescription">@string/delete</item>
    </style>
</resources>